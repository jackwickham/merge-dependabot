{
  "name": "merge-dependabot",
  "version": "1.0.0",
  "private": true,
  "description": "Github action that merges dependabot PRs automatically",
  "main": "lib/main.js",
  "type": "module",
  "scripts": {
    "start": "node --async-stack-traces ./lib/index.js",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "all": "npm run build && npm run format && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackwickham/merge-dependabot.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "Jack Wickham",
  "license": "MIT",
  "dependencies": {
    "probot": "^14.2.4"
  },
  "devDependencies": {
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": ">=8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.14.0",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "nock": "^15.0.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "overrides": {
    "got": "^11.8.5 || >= 12.1.0"
  }
}
