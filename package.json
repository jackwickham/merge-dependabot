{
  "name": "merge-dependabot",
  "version": "1.0.0",
  "private": true,
  "description": "Github action that merges dependabot PRs automatically",
  "main": "lib/main.js",
  "scripts": {
    "start": "node --async-stack-traces ./lib/index.js",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackwickham/merge-dependabot.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "Jack Wickham",
  "license": "MIT",
  "dependencies": {
    "probot": "^12.2.8"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/nock": "^11.1.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^28.1.3",
    "jest-circus": "^29.3.1",
    "nock": "^13.2.9",
    "prettier": "^2.8.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "overrides": {
    "got": "^11.8.5 || >= 12.1.0"
  }
}
