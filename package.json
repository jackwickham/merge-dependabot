{
  "name": "merge-dependabot",
  "version": "1.0.0",
  "private": true,
  "description": "Github action that merges dependabot PRs automatically",
  "main": "lib/main.js",
  "scripts": {
    "start": "node --async-stack-traces ./lib/index.js",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackwickham/merge-dependabot.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "Jack Wickham",
  "license": "MIT",
  "dependencies": {
    "probot": "^12.3.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.43.0",
    "eslint-plugin-jest": "^27.2.2",
    "jest": "^28.1.3",
    "jest-circus": "^29.5.0",
    "nock": "^13.3.1",
    "prettier": "^2.8.8",
    "ts-jest": "^28.0.8",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "overrides": {
    "got": "^11.8.5 || >= 12.1.0"
  }
}
